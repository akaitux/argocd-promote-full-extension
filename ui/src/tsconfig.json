{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2017", "dom"]
  },
  "include": ["./**/*"],
  "exclude": [
        "node_modules",
        "./**/*.test.ts",
        "./**/*.test.tsx"
    ]
}
